<section class="section">
	<div class="container">
	  <div class="row">
	    <div class="col-lg-12">
			<h3 class="page-title">Sign Up <small>Create a new account to start tracking issues</small></h3>
				<div class="page-body">
					{{#if errorMessage}}
						<div class="alert alert-danger">{{errorMessage}}</div>
					{{/if}}
					<form {{action signup on="submit"}} role="form">
						<div class="form-group">
							<label for="fullname">Full Name</label>
							{{input value=fullname type="text" id="fullname" class="form-control" }}
						</div>
						<div class="form-group">
							<label for="email">Email Address</label>
							{{input value=email type="text" id="email" class="form-control" }}
						</div>
						<div class="form-group">
							<label for="username">Username</label>
							{{input value=username type="text" id="username" class="form-control" }}
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							{{input value=password type="password" id="password" class="form-control" }}
						</div>
						{{input class="btn btn-primary" type="submit" value="Sign Up"}}
					</form>
				</div>
	    </div>
	  </div>
	</div>
</section>