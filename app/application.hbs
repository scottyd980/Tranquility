	<div class="wrapper">
  	
		<a {{action 'toggleMenu' bubbles=false}}>Menu</a>

		{{#view Tranquility.SideMenuView tagName="nav" class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" classBinding="menuToggled:cbp-spmenu-open"}}
